<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="product.dao.face.ProductDao">
  	<select id="selectAll" resultType="product.dto.Product">
  		SELECT * FROM PRODUCT
  	</select>
  	<select id="selectByNo" parameterType="int" resultType="product.dto.Product">
  		SELECT * FROM PRODUCT
  		WHERE productNo =${productNo}
  	</select>
  	<select id="getOptionByNo" parameterType="int" resultType="product.dto.Option">
  		SELECT
    		O.*
		FROM product P, categorydetail CD, categorybase CB, optionBase O
		WHERE 1=1
			AND P.categorymapno = CD.categorymapno
			AND CD.categoryno = CB.categoryno
			AND CB.categoryno = O.categoryno
			AND productno = ${productNo}
  	</select>
  </mapper>